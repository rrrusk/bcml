#!/usr/bin/env ruby

THIS_FILE = File.symlink?(__FILE__) ? File.readlink(__FILE__) : __FILE__
$MY_DIRECTORY = File.dirname(THIS_FILE) + '/..'
begin
  require File.dirname(THIS_FILE) + '/../lib/bcml'
rescue LoadError
  require 'bcml'
end

newfile = open('convert' + '.html', 'w')

source = open(ARGV[0])
contents = source.read
source.close

#変換元データを処理した後変換先ファイルに書き込み
con = Convert.new
converted = con.main(contents)

newfile.write(converted)
newfile.close
